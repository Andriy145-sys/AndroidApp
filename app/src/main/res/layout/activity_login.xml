<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginStart="50sp">

    <TextView
        android:id="@+id/loginMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80sp"
        android:layout_marginTop="50sp"
        android:onClick="GoToProfile"
        android:text="Ввійти"
        android:textColor="@color/main"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginMainText"
        android:layout_marginTop="20sp"
        android:width="250sp"
        android:backgroundTint="@color/main"
        android:hint="Електронна адреса"
        android:inputType="textEmailAddress"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginEmail"
        android:layout_marginTop="15sp"
        android:width="250sp"
        android:backgroundTint="@color/main"
        android:hint="Пароль"
        android:inputType="textPassword"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@id/loginPassword"
        android:layout_marginStart="45sp"
        android:layout_marginTop="20sp"
        android:width="150sp"
        android:background="@color/main"
        android:onClick="Login"
        android:text="Ввійти"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,TextContrastCheck" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Немає аккаунту?"
        android:layout_marginTop="10sp"
        android:layout_marginStart="70sp"
        android:layout_below="@+id/loginBtn"
        android:id="@+id/labelNoAcc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelNoAcc"
        android:layout_marginStart="68sp"
        android:layout_marginTop="10sp"
        android:onClick="GoToSignUp"
        android:text="Створити аккаунт"
        android:textColor="@color/main"
        tools:ignore="TouchTargetSizeCheck" />

</RelativeLayout>